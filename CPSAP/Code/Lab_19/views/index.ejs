<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/studentModelStyle.css">
    <title>Students</title>
</head>

<body>
    <main class="container">

        <h2 class="page-title">Students list</h2>


        <% if (students && students.length> 0) { %>

            <ul class="students-list" id="studentsList">

                <% students.forEach(student=> { %>

                    <li class="student-item" data-id="<%= student.id %>">

                        <div class="student-main">

                            <span class="student-id">
                                <%= student.id %>
                            </span>

                            <span class="student-name">
                                <%= student.name %>
                            </span>

                            <span class="student-age">
                                <%= student.age ?? '' %>
                            </span>

                            <span class="student-major">
                                <%= student.major ?? '' %>
                            </span>

                        </div>

                        <div class="student-actions">

                            <button class="btn btn-edit" data-id="<%= student.id %>">Edit</button>

                            <button class="btn btn-delete" data-id="<%= student.id %>">Delete</button>

                        </div>

                    </li>

                    <% }) %>

            </ul>

            <% } else { %>

                <p class="empty">No students yet â€” add one below.</p>

                <ul class="students-list" id="studentsList"></ul>

                <% } %>


                    <section class="form-wrap">

                        <h3 id="formTitle">Add Student</h3>

                        <form id="studentForm" class="student-form" autocomplete="off">

                            <input type="hidden" id="studentId" name="id" />


                            <label class="field">

                                <span class="label">Name</span>

                                <input id="name" name="name" type="text" required maxlength="120" />

                            </label>


                            <label class="field">

                                <span class="label">Age</span>

                                <input id="age" name="age" type="number" min="0" />

                            </label>


                            <label class="field">

                                <span class="label">Major</span>

                                <input id="major" name="major" type="text" maxlength="80" />

                            </label>


                            <div class="form-actions">

                                <button type="submit" class="btn btn-primary" id="saveBtn">Save</button>

                                <button type="button" class="btn btn-ghost" id="resetBtn">Reset</button>

                            </div>

                        </form>

                    </section>

    </main>
</body>

</html>